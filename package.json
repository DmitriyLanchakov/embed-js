{
  "name": "embed-js",
  "version": "0.0.0-semantically-released",
  "description": "A boilerplate to write plugins in pure JavaScript using ES2015",
  "main": "dist/embed.cjs.js",
  "module": "dist/embed.es.js",
  "browser": "dist/embed.umd.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "commit": "git cz",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:cover": "nyc ava",
    "test:report": "cat ./coverage/lcov.info | codecov && rm -rf ./coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "build": "node scripts/build.js",
    "build:umd": "BUILD=umd node scripts/build.js",
    "build:watch": "nodemon --watch src -x 'npm run build'",
    "build:umd:watch": "nodemon --watch src -x 'npm run build:umd'",
    "lint": "eslint src/**/*.js *.js tests/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write --use-tabs --no-semi --tab-width 1 src/**/*.js *.js tests/**/*.js",
    "prepublish": "npm run build",
    "precommit": "lint-staged"
  },
  "license": "MIT",
  "devDependencies": {
    "app-root-path": "^2.0.1",
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.0",
    "chai-html": "^1.1.4",
    "codecov.io": "^0.1.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-name": "^0.1.0",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "jsdom": "^9.12.0",
    "just-camel-case": "^1.0.0",
    "lint-staged": "^4.0.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "prettier-eslint-cli": "^4.1.1",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-nodent": "^0.1.1",
    "rollup-plugin-regenerator": "^0.3.0",
    "rollup-plugin-uglify": "^2.0.1",
    "semantic-release": "^6.3.6",
    "sinon": "^2.4.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "author": {
    "name": "Ritesh Kumar",
    "email": "rkritesh078@gmail.com",
    "url": "https://github.com/ritz078"
  },
  "lint-staged": {
    "'{src, tests}/**/*.js'": [
      "prettier --write --use-tabs --no-semi --tab-width 1",
      "git add"
    ]
  },
  "homepage": "https://github.com/ritz078/embed.js",
  "dependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "escape-string-regexp": "^1.0.5",
    "fetch-jsonp": "^1.1.1",
    "html-linkify": "^1.2.2",
    "is-dom": "^1.0.9",
    "is-in-browser": "^1.1.3",
    "isomorphic-unfetch": "^2.0.0",
    "just-compact": "^1.0.0",
    "just-extend": "^1.1.22",
    "just-flatten-it": "^1.1.23",
    "just-kebab-case": "^1.0.0",
    "just-pluck-it": "^1.1.21",
    "just-truncate": "^1.0.1",
    "node-fetch": "^1.7.1",
    "p-is-promise": "^1.1.0",
    "p-waterfall": "^1.0.0",
    "prismjs": "^1.6.0",
    "regex-emoji": "^2.0.5",
    "rollup-plugin-babel": "^2.7.1",
    "snarkdown": "^1.2.2",
    "unfetch": "^3.0.0"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  }
}
